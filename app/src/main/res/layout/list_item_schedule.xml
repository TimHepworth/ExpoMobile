<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/list_item_day_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#ffcccc"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/list_item_schedule_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/list_item_schedule_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/list_item_schedule_day_name"/>

        <TextView
            android:id="@+id/list_item_schedule_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/list_item_schedule_day_number"/>

    </RelativeLayout>

</RelativeLayout>