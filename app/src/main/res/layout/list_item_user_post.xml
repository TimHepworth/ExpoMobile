<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="5dp"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/post_id_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="User Name"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/list_item_post_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/list_item_user_post_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fair_logo"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/post_id_layout"/>

        <TextView
            android:id="@+id/list_item_post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speaker Name"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_below="@id/list_item_user_post_photo"/>

    </RelativeLayout>


